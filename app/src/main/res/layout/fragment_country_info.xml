<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_16dp"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvCountryName"
        style="@style/TextAppearance.AppCompat.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFlag"
        tools:text="Russia" />

    <TextView
        android:id="@+id/tvCurrencyOfCapital"
        style="@style/TextAppearance.AppCompat.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_of_capital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCountryName" />

    <TextView
        android:id="@+id/tvCurrency"
        style="@style/TextAppearance.AppCompat.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvCurrencyOfCapital"
        app:layout_constraintTop_toBottomOf="@+id/tvCountryName"
        tools:text="Rub" />

    <TextView
        android:id="@+id/tvCapital"
        style="@style/TextAppearance.AppCompat.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capital_of_country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrency" />

    <TextView
        android:id="@+id/tvCapitalOfCountry"
        style="@style/TextAppearance.AppCompat.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvCapital"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrency"
        tools:text="Moscow" />
</androidx.constraintlayout.widget.ConstraintLayout>